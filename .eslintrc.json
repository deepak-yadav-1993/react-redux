{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["airbnb", "airbnb/hooks", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		// Allow Prettier to throw errors via ESLint
		"prettier/prettier": "error"
	}
}
